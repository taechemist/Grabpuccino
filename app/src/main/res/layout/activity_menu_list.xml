<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.latte.grabpuccino.MenuListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sunflower"
        android:paddingTop="20dp"
        android:paddingBottom="20sp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/coffeeName"
            style="@style/TextView.White.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coffee Shop" />

        <TextView
            android:id="@+id/coffeeLocation"
            style="@style/TextView.White.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location" />

    </LinearLayout>
    </FrameLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coffeeList">


    </ListView>

</LinearLayout>
